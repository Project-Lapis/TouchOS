<div class="nav-bar"><div class="nav-title">App Store Connect</div></div>
<div class="content">
  <div class="card">
    <label>Application Name</label>
    <input type="text" id="app-name" placeholder="e.g. Calculator">
  </div>
  <div class="card">
    <label>Source Code (HTML/JS)</label>
    <textarea id="app-code" placeholder="<!DOCTYPE html>..."></textarea>
  </div>
  <button class="btn-primary" onclick="installApp()">Install to TouchOS</button>
  <div class="log" id="log"></div>
</div>
<script>
async function installApp() {
  const name = document.getElementById('app-name').value.trim();
  const code = document.getElementById('app-code').value.trim();
  if(!name || !code) return;
  
  const logEl = document.getElementById('log');
  logEl.innerHTML = 'Installing...';
  try {
    const filename = name.endsWith('.html') ? name : name + '.html';
    await parent.XLine.fs.write('/apps/' + filename, code);
    logEl.innerHTML = 'Installed ' + filename;
    logEl.style.color = 'green';
    setTimeout(() => { parent.XLine.goHome(); }, 1000);
  } catch(e) {
    logEl.innerHTML = 'Error: ' + e.message;
    logEl.style.color = 'red';
  }
}
<\/script></body></html>
